<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="textViewHeader" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black </item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">30sp</item>

    </style>

    <style name="textViewField" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#FFC300 </item>
            <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:labelTextSize">20sp</item>
        <item name="android:textSize">20sp</item>




    </style>
    <style name="layoutStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#D5D8DC</item>
    </style>



</resources>
